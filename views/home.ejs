  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  text-align: center;
}

.why-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 6px 25px rgba(255, 56, 92, 0.2);
}

.why-card i {
  font-size: 2.3rem;
  color: #ff385c;
  margin-bottom: 15px;
  background: rgba(255, 56, 92, 0.08);
  padding: 15px;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.why-card:hover i {
  background: #ff385c;
  color: #fff;
